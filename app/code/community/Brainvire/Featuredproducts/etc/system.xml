<?xml version="1.0"?>
<!--
@author Brainvire Team 
@copyright Brainvire 
@package Brainvire_Featuredproducts 
-->
<config>
    <tabs>
        <brainvire module="featuredproducts">
            <label>Brainvire</label>
            <sort_order>110</sort_order>
        </brainvire>
    </tabs>
    <sections>
        <featuredproducts translate="label" module="featuredproducts">
            <class>separator-top</class>
            <label>Featured Products</label>
            <tab>brainvire</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <brainvireextensions translate="label">
                    <label>Brainvire Extensions</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    <listextension translate="label">
                    <frontend_model>Brainvire_Featuredproducts_Block_Extensionfeed</frontend_model>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    </listextension>
                    </fields>
                </brainvireextensions>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <heading translate="label comment">
                            <label>Heading</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </heading>

                        <heading_block translate="label comment">
                            <label>Heading for CMS block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </heading_block>

                        <meta_title translate="label comment">
                            <label>Meta Title</label>
                            <comment>Displayed in Featured Product Page</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_title>

                        <meta_description translate="label comment">
                            <label>Meta Description</label>
                            <comment>Displayed in Featured Product Page</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_description>

                        <meta_keywords translate="label comment">
                            <label>Meta Keywords</label>
                            <comment>Displayed in Featured Product Page</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_keywords>

                        <layout translate="label">
                            <label>Layout</label>
                            <comment>Layout of Featured Product Page</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>page/source_layout</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </layout> 
                        
                        <product_sort_by translate="label">
                            <label>Sort By in Main Block</label>
                            <comment>Main block is used in content section of the site</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>featuredproducts/system_config_source_sort</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </product_sort_by>

                        <number_of_items translate="label comment">
                            <label>Number Of Items in Main Block</label>
                            <comment>How many featured products will be showed in main block?</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </number_of_items>

                        <number_of_items_per_row translate="label comment">
                            <label>Number Of Items per row in Main Block</label>
                            <comment>How many featured products will be showed per row?</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </number_of_items_per_row>

                         <product_view_by translate="label">
                            <label>View</label>
                            <comment>How to show the featured products</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>featuredproducts/system_config_source_view</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </product_view_by>
                        
                    </fields>
                </general>
    	        <displayoption translate="label">
                    <label>Display Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
            			<homepage translate="label">
            				<label>Show Featured Products On Homepage:</label>
            				<frontend_type>select</frontend_type>
            				<source_model>adminhtml/system_config_source_yesno</source_model>
            				<sort_order>41</sort_order>
            				<show_in_default>1</show_in_default>
            		    	</homepage>
            			<product_page translate="label">
            				<label>Show Featured Products On Product Page:</label>
            				<frontend_type>select</frontend_type>
            				<source_model>adminhtml/system_config_source_yesno</source_model>
            				<sort_order>43</sort_order>
            				<show_in_default>1</show_in_default>
            		    	</product_page>
                        <customcode translate="label comment">
                            <label>Custom Code:</label>
                            <frontend_type>note</frontend_type>
                            <comment><![CDATA[ 
                            <span class="notice" style="font-size:15px;">{{block type="featuredproducts/listing"}}</span> Use this code in CMS pages to display Featured Products]]></comment>
                            <sort_order>51</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customcode>
        		    </fields>
        		</displayoption>
            </groups>
        </featuredproducts>
    </sections>
</config>
